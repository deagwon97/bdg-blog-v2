generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  summary   String
  content   String?   @db.LongText
  published Boolean   @default(false)
  createdAt DateTime? @default(now())
  updatedAt DateTime?
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime? @default(now())
  updatedAt DateTime?
}
